{
  "id": "/http-server",
  "cmd": "python -m http.server 8000",
  "cpus": 0.2,
  "mem": 64,
  "disk": 0,
  "instances": 2,
  "acceptedResourceRoles": [
    "slave_public"
  ],
  "constraints": [["hostname", "UNIQUE"]],
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "python:3-alpine",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 0,
          "servicePort": 10101,
          "protocol": "tcp",
          "name": "main",
          "labels": {
            "VIP_0": "1.2.3.4:5000"
          }
        }
      ],
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 10,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ]
}
